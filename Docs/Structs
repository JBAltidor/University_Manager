Module de Gestion des accès au système
--------------------------------------
Struct utilisateur 
{
int Code;
char NIF[13];
char Nom[50];
char Prenom[50];
char Password[20];
char Date[10];
int Type; //1 = adm , 2 = user
int Categorie; // 1= etudiant , 2 = professeur , 3= comptable , 4 = agent administratif , 5= bibliothecaire
?? Module;
}

Struct etudiant 
{
int Code ;
char *Faculte;
